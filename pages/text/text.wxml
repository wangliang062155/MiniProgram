<!--pages/text/text.wxml-->
<!-- 1. 基本使用 -->
<!-- \n 可换行 -->
<text>hello world\n</text>
<text>你好\n</text>

<!-- 2. selectable:true -->
<text selectable="{{true}}">去你的</text>
<!-- 加上就默认为true了 -->
<text selectable>去你的\n</text>

<!-- 3. space决定文本空格的大小 -->
<!-- nbsp 默认的 -->
<!-- ensp 半个中文字符大小-->
<!-- emsp 一个中文字符大小 -->
<text>你好 zouye\n</text>
<text space="nbsp">你好 zouye\n</text>
<text space="ensp">你好 zouye\n</text>
<text space="emsp">你好 zouye\n</text>

<!-- 4. decode属性 是否解码文本 -->
<text decode="{{true}}">5 &gt; 3</text>


